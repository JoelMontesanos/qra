<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3>New qr</h3>
        </div>
        <div class="card-body">
            <form action="/qr/new_qr" method="POST">
                <div class="form-group">
                    <input type="text" name="nombre" class="form-control" placeholder="Nombre" autofocus>
                </div>
                <div class="form-group">
                    <input type="number" name="ine" class="form-control" placeholder="Número INE"><br>
                    <input type="text" name="auto" class="form-control" placeholder="Auto"><br>
                    <input type="number" name="placas" class="form-control" placeholder="Número de placas"><br>
                    <input type="number" name="casaVisita" class="form-control" placeholder="Casa a visitar"><br>
                    <input type="text" name="motivo" class="form-control" placeholder="Motivo de la Visita"><br>
                    <label for="validez">Fecha y hora de la visita</label>
                    <input type="datetime-local" name="validez" class="form-control" placeholder="Fecha de visita">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">
                        Generar codigo
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>