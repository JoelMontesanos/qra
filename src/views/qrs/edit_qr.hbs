<div class="col-md4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edit Qr</h3>
        </div>
        <div class="card-body">
            <form action="/qr/edit/{{qr._id}}?_method=PUT" method="POST">
            <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="nombre" class="form-control" value="{{qr.nombre}}">
                </div>
                <div class="form-group">
                    <input type="number" name="ine" class="form-control" placeholder="Número INE" value="{{qr.ine}}"><br>
                    <input type="text" name="auto" class="form-control" placeholder="Auto" value="{{qr.auto}}"><br>
                    <input type="number" name="placas" class="form-control" placeholder="Número de placas" value="{{qr.placas}}"><br>
                    <input type="number" name="casaVisita" class="form-control" placeholder="Casa a visitar" value="{{qr.casaVisita}}"><br>
                    <input type="text" name="motivo" class="form-control" placeholder="Motivo de la Visita" value="{{qr.motivo}}"><br>
                    <label for="validez">Fecha y hora de la visita</label>
                    <input type="datetime-local" name="validez" class="form-control" value="{{qr.validez}}">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>